
extends template/layout.pug 

block content 
    //- .container.justify-content-between.bg-secondary
    .main_container

        #movies_top_container.ml-5
            //- .col-2.ml-5.p-0
            p.d-inline.text-white.font-weight-bold.mr-5.pr-5 Cine

            .d-sm-block.d-md-inline
                p.d-inline.text-white.m-0.mr-3 VIP Galerias, Guadalajara
                <svg xmlns="http://www.w3.org/2000/svg" display="inline" width="18" height="18" fill="white" class="bi bi-pen" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                </svg>
            .col-sm-6.col-md-3.m-0.p-0
                hr.bg-white.mt-1

        #movie_main_container
            .card.ml-5.mr-5.mb-5.h-50.bg-transparent
                img.rounded.card-img(src=imgPath+first_movie_bg_main.poster_path, alt=first_movie_bg_main.title, style="object-fit: cover; height: 100%; opacity: 30%")
                
                .card-img-overlay.d-flex.flex-columns
                    img.rounded(src=imgPath+first_movie_bg_main.poster_path, alt=first_movie_bg_main.title, style="height:250")
                    p.card-text.ml-5.mt-5.text-white #{first_movie_bg_main.overview}
        
        #movies_container
            .mb-3
                p.d-inline.border-right.ml-5.pl-5.pr-5.text-white.font-weight-bold(style="width: fit-content;") En cartelera
                p.d-inline.ml-5.text-white.font-weight-light Seleccionar otro cine

            .row.justify-content-center
                each movie in loadedMovies
                    .col-auto.m-2.mb-5.text-center
                        a(href=`/pelicula/${movie.id}`)
                            img.rounded(src=imgPath+movie.poster_path, alt=movie.title, style={width:200})
                            p(style="white-space:nowrap;width:250px;overflow:hidden;color:white;text-overflow:ellipsis") #{movie.title}



block scripts
    script(src="js/test.js") 